@{
    ViewData["Title"] = "Contact";
}

<!DOCTYPE html>
    <html>
    <head>
        <title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    

    </head>
    <body>
    <div class="container py-5">
        <h2 class="text-center fw-bold mb-4" data-aos="fade-up">📬 Contact Me</h2>
        <p class="text-center lead mb-5" data-aos="fade-in">
            I'm always open to new opportunities, collaborations, or just a chat!
        </p>

        <div class="row justify-content-center">
            <div class="col-md-6" data-aos="fade-up" data-aos-delay="100">
                <ul class="list-group list-group-flush fs-5 mb-4">
                    <li class="list-group-item">
                        <i class="fas fa-envelope text-danger me-2"></i>
                        <strong>Email:</strong>
                        <a href="mailto:vinayjillala515@gmail.com" class="text-decoration-none">vinayjillala515@gmail.com</a>
                    </li>
                    <li class="list-group-item">
                        <i class="fab fa-github text-dark me-2"></i>
                        <strong>GitHub:</strong>
                        <a href="https://github.com/vinay366" class="text-decoration-none" target="_blank">github.com/vinay366</a>
                    </li>
                    <li class="list-group-item">
                        <i class="fab fa-linkedin text-primary me-2"></i>
                        <strong>LinkedIn:</strong>
                        <a href="https://linkedin.com/in/jillalavinay" class="text-decoration-none" target="_blank">linkedin.com/in/jillalavinay</a>
                    </li>
                </ul>
            </div>

        </div>
        <!-- CV Preview Button -->
        <button type="button" class="btn btn-outline-primary mt-2" data-bs-toggle="modal" data-bs-target="#cvModal">
            📄 Preview & Download CV
        </button>

        <!-- CV Preview Modal -->
        <div class="modal fade" id="cvModal" tabindex="-1" aria-labelledby="cvModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="cvModalLabel">📄 My Resume – Jillala Vinay</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body p-0">
                        <!-- Option 1: Using object tag -->
                        <object data="/cv/JillalaVinayResume.pdf" type="application/pdf" width="100%" height="800px">
                            <!-- Option 2: Using iframe as fallback -->
                            <iframe src="/cv/JillalaVinayResume.pdf" width="100%" height="800px" style="border: none;">
                                <!-- Option 3: Text fallback -->
                                <p>Unable to display PDF. <a href="./cv/JillalaVinayResume.pdf">Click here to download</a></p>
                            </iframe>
                        </object>
                    </div>
                    <div class="modal-footer">
                        <a href="/cv/JillalaVinayResume.pdf" class="btn btn-primary" download>⬇️ Download CV</a>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

       @*  <!-- Alternative: Simple link if modal doesn't work -->
        <div class="mt-3">
            <a href="/cv/JillalaVinayResume.pdf" class="btn btn-primary" download>⬇️ Download CV (Direct Link)</a>
        </div> *@

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>